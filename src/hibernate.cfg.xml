<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/flotaespacial</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!--muestra las consultas por consola -->
        <property name="hibernate.show_sql">true</property>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->

        <mapping class="com.javiertp.com.javiertp.base.Tripulante"/>
        <mapping class="com.javiertp.com.javiertp.base.Mision"/>
        <mapping class="com.javiertp.com.javiertp.base.NaveEspacial"/>
    </session-factory>
</hibernate-configuration>